<article>
  <h2 class='edit-title'>Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" class='input' id='input' />
    </div>
    <div class='edit-meta'>
      Created by you on {{format_date post.created_at}} | <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class='save-post-btn post-btn'>Save post</button>
    <button type="button" class="delete-post-btn post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body" class='input' id='content'></textarea>
  </div>

  <div>
    <button type="submit" id='add-comment-btn'>Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>